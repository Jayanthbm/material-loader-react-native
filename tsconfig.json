{
   "compilerOptions": {
      "target": "ES2019",
      "module": "ESNext",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "jsx": "react-jsx",
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmitOnError": true,
      "forceConsistentCasingInFileNames": true
   },
   "include": [
      "src"
   ],
   "exclude": [
      "node_modules",
      "dist",
      "**/__tests__/**"
   ]
}